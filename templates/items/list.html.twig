{% extends 'layout/layout.html.twig' %}

{% block content %}
    <div class="row mt-5">
        <div class="col-md-12">
            <h3>Dostępne artykuły:</h3>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-md-12">
            <table class="table table-striped table-hover">
                <thead>
                <tr>
                    <th>ID</th>
                    <th>Nazwa</th>
                    <th>Jednostka</th>
                    <th>VAT</th>
                    <th class="col-md-2 text-end">
                        <a href="{{ path('app_items_add') }}" class="btn btn-sm btn-primary">Dodaj</a>
                    </th>
                </tr>
                </thead>

                <tbody>
                {% for item in items %}
                    <tr>
                        <td> {{ item.getId() }}</td>
                        <td> {{ item.getName() }}</td>
                        <td> {{ item.getUnit() }}</td>
                        <td> {{ item.getVat() }}</td>
                        <td class="text-end">
                            <a href="#" class="btn btn-danger btn-sm disabled" data-bs-toggle="tooltip" data-bs-placement="top" title="Dostępne wkrótce">Usuń</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
