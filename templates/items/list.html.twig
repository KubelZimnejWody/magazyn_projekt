{% extends 'layout/layout.html.twig' %}

{% block content %}
    <div class="row mt-5">
        <div class="col-md-12">
            <h3>Dostępne artykuły:</h3>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-md-12">
            <table class="table table-striped table-hover">
                <thead>
                <tr>
                    <th>ID</th>
                    <th>Nazwa</th>
                    <th>Ilość</th>
                    <th>Jednostka</th>
                    <th>VAT</th>
                    <th>Cena</th>
                    <th class="col-md-1 text-end">
                        <a href="#" class="btn btn-sm btn-dark">Dodaj</a>
                    </th>
                </tr>
                </thead>

                <tbody>
                {% for item in items %}
                    <tr>
                        <td> {{ item.getId() }}</td>
                        <td> {{ item.getName() }}</td>
                        <td> {{ item.getQuantity() }}</td>
                        <td> {{ item.getUnit() }}</td>
                        <td> {{ item.getVat() }}</td>
                        <td> {{ item.getPrice() }}</td>
                        <td class="text-end">
                            <a href="{{ path('app_account', { 'itemId': item.getId() }) }}" class="btn btn-primary btn-sm">Wydaj</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
