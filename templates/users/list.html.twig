{% extends 'layout/layout.html.twig' %}

{% block content %}
    <div class="row mt-5">
        <div class="col-md-12">
            <h3>Użytkownicy:</h3>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-md-12">
            <table class="table table-striped table-hover">
                <thead>
                <tr>
                    <th>ID </th>
                    <th>Nazwa</th>
                    <th>Rola</th>
                    <th class="col-md-1 text-end">
                        <a href="{{ path('app_users_add') }}" class="btn btn-primary btn-sm">Dodaj</a>
                    </th>
                </tr>
                </thead>

                <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.getId() }}</td>
                        <td>{{ user.getUsername() }}</td>
                        <td>{{ user.getRoles()[0] }}</td>
                        <td class="text-end">
                            <a href="#" class="btn btn-danger btn-sm disabled" data-bs-toggle="tooltip" data-bs-placement="top" title="Dostępne wkrótce">Usuń</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
