{% extends 'base.html.twig' %}
{% block title %}Hello AccountController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
            text-align: center;
            border: solid grey 3px;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <h1>O, witaj tutaj {{ app.user.username ?? 'Anonymous user' }}!</h1>
    </div>


    {% for w in warehouses %}
        <div>
            <h4>{{ w.getName() }}</h4>
            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>name</th>
                        <th>quantity</th>
                        <th>unit</th>
                        <th>vat</th>
                        <th>price</th>
                    </tr>
                </thead>

                <tbody>
                {% for item in w.items %}
                    <tr>
                        <td> {{ item.getId() }}</td>
                        <td> {{ item.getName() }}</td>
                        <td> {{ item.getQuantity() }}</td>
                        <td> {{ item.getUnit() }}</td>
                        <td> {{ item.getVat() }}</td>
                        <td> {{ item.getPrice() }}</td>
                    </tr>
                {% endfor %}

                </tbody>

            </table>
        </div>
    {% endfor %}
    <input type="button" onclick="location.href='http://magazyn-projekt/add/user';" value="Dodaj nowego uzytkownika" />
    <input type="button" onclick="location.href='http://magazyn-projekt/add/item';" value="Dodaj nowy artykul" />
    <input type="button" onclick="location.href='http://magazyn-projekt/add/warehouse';" value="Dodaj nowy magazyn" />
    <input type="button" onclick="location.href='http://magazyn-projekt/delete/user';" value="Usuń użytkownika" />
    <input type="button" onclick="location.href='http://magazyn-projekt/delete/warehouse';" value="Usuń magazyn" />
    <input type="button" onclick="location.href='http://magazyn-projekt/delete/item';" value="Usuń artykuł" />
    <input type="button" onclick="location.href='http://magazyn-projekt/logout';" value="Wyloguj się" />
{% endblock %}
