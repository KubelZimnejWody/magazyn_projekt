{% extends 'layout/layout.html.twig' %}

{% block content %}
    <div class="row mt-5">
        <div class="col-md-12">
            <h3>Dostępne magazyny:</h3>
        </div>
    </div>

    {% for warehouse in warehouses %}
        <div class="row mt-5">
            <div class="col-md-12">
                <div class="accordion accordion-flush" id="accordionFlushExample">
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="flush-heading-{{ loop.index }}">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapse-{{ loop.index }}" aria-expanded="false" aria-controls="flush-collapse-{{ loop.index }}">
                                {{ warehouse.getName() ?? 'Magazyn' }}
                            </button>
                        </h2>

                        <div id="flush-collapse-{{ loop.index }}" class="accordion-collapse collapse accordion-flush" aria-labelledby="flush-heading-{{ loop.index }}" data-bs-parent="#accordionFlushExample">
                            <div class="accordion-body">
                                <table class="table table-striped table-hover">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Nazwa</th>
                                            <th>Ilość</th>
                                            <th>Jednostka</th>
                                            <th>VAT</th>
                                            <th>Cena</th>
                                            <th class="col-md-1 text-end">
                                                <a href="#" class="btn btn-sm btn-dark">Dodaj</a>
                                            </th>
                                        </tr>
                                    </thead>

                                    <tbody>
                                    {% for item in warehouse.items %}
                                        <tr>
                                            <td> {{ item.getId() }}</td>
                                            <td> {{ item.getName() }}</td>
                                            <td> {{ item.getQuantity() }}</td>
                                            <td> {{ item.getUnit() }}</td>
                                            <td> {{ item.getVat() }}</td>
                                            <td> {{ item.getPrice() }}</td>
                                            <td class="text-end">
                                                <a href="{{ path('app_account', { 'itemId': item.getId() }) }}" class="btn btn-primary btn-sm">Wydaj</a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
{% endblock %}
