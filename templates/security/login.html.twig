{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row vh-100">
            <div class="col-md-6 offset-md-3 d-flex flex-column align-items-center justify-content-center">
                <div class="row mb-2">
                    <div class="col-md-12">
                        <h4>Uprasza się o zalogowanie.</h4>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        {% if error %}
                            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <form method="post">
                            <div class="form-group">
                                <input type="text" class="form-control" name="_username" value="{{ last_username }}" placeholder="Nazwa użytkownika">
                            </div>

                            <div class="form-group mt-1">
                                <input type="password" class="form-control" name="_password" placeholder="Hasło">
                            </div>

                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                            <div class="form-group mt-3 d-grid mx-auto">
                                <button type="submit" class="btn btn-primary btn-dark">Zaloguj</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
